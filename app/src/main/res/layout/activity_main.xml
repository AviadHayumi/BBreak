
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space">



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_centerInParent="true"
    android:paddingBottom="16dp" tools:context=".Activities.MainActivity"


    >

    <ImageButton
        android:layout_marginTop="10dp"
        android:src="@drawable/questionmark"
        android:layout_below="@+id/btnQuestionMark"
        android:scaleType="fitXY"
        android:id="@+id/btnQuestionMark"
        android:background="@null"

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:elevation="0dp" />

    <CheckBox
        android:text="Sound"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        android:layout_alignBottom="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your High Score"
        android:id="@+id/score"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:fontFamily=""




        />



    <ImageButton
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/playgame"
        android:id="@+id/btnPlay1"
        android:scaleType="fitCenter"
        android:layout_below="@+id/score"
        android:background="@null"

        />

    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:src="@drawable/shopbutton"
        android:layout_below="@+id/btnPlay1"
        android:scaleType="fitXY"
        android:id="@+id/btnShop"
        android:visibility="gone"
        android:background="@null"

    />






</LinearLayout>
</RelativeLayout>
